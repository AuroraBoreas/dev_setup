{
	"docker-compose-django-nginx": {
		"prefix": "dockercomposeDjangoNginx",
		"body": [
			"version: '${1:3.8}'\n",
			"services:",
			"\tdjango:",
			"\t\tbuild:",
			"\t\t\tcontext: .",
			"\t\trestart: unless-stopped",
			"\t\tports:",
			"\t\t\t- \"8000:8000\"",
			"\t\tvolumes:",
			"\t\t\t- static:/static",
			"\t\tenv_file:",
			"\t\t\t- ${2:src/config/settings/environments/.env}",
			"\t\tnginx:",
			"\t\tbuild: ./nginx",
			"\t\tvolumes:",
			"\t\t\t- static:/static",
			"\t\trestart: unless-stopped",
			"\t\tports:",
			"\t\t\t- \"80:80\"",
			"\t\tdepends_on:",
			"\t\t\t- django\n",
			"volumes:",
			"\tstatic:",			
		],
		"description": "docker-compose.yml, Django, nginx",
	},

	"docker-compose-django": {
		"prefix": "dockercomposeDjango",
		"body": [
			"django:",
			"\tbuild:",
			"\t\tcontext: .",
			"\trestart: ${1:unless-stopped}",
			"\tports:",
			"\t\t- \"8000:8000\"",
			"\tvolumes:",
			"\t\t- ${2:static:/static}",
			"\tenvironment:",
			"\t\t- POSTGRES_DB=postgres",
			"\t\t- POSTGRES_USER=postgres",
			"\t\t- POSTGRES_PASSWORD=postgres",
			"\tenv_file:",
			"\t\t- ${3:src/config/settings/environments/.env}",		
		],
		"description": "docker-compose.yml, Django",
	},

	"docker-compose-nginx": {
		"prefix": "dockercomposeNginx",
		"body": [
			"nginx:",
			"build: ./nginx",
			"volumes:",
			"\t- static:/static",
			"restart: unless-stopped",
			"ports:",
			"\t- \"80:80\"",
			"depends_on:",
			"\t- django\n",
			"volumes:",
			"\tstatic:",			
		],
		"description": "docker-compose.yml, Django, nginx",
	},

	"docker-compose-postgres": {
		"prefix": "dockercomposePg",
		"body": [
			"version: '3.9'\n",
			"services:",
			"\tdb:",
			"\t\timage: postgres",
			"\t\tenvironment:",
			"\t\t\t- POSTGRES_DB=postgres",
			"\t\t\t- POSTGRES_USER=postgres",
			"\t\t\t- POSTGRES_PASSWORD=postgres",
			"\t\tports:",
			"\t\t\t- \"5432:5432\"\n",
			"\tpgadmin:",
			"\t\tcontainer_name: pgadmin4_container",
			"\t\timage: dpage/pgadmin4",
			"\t\trestart: unless-stopped",
			"\t\tenvironment:",
			"\t\t\t- PGADMIN_DEFAULT_EMAIL=admin@domain.com",
			"\t\t\t- PGADMIN_DEFAULT_PASSWORD=root",
			"\t\tports:",
			"\t\t\t- \"5050:80\"\n",
		],
		"description": "docker-compose.yml, Postgres",
	},

	"docker-compose-postgres-db": {
		"prefix": "dockercomposePgDb",
		"body": [
			"db:",
			"\timage: postgres",
			"\tenvironment:",
			"\t\t- POSTGRES_DB=postgres",
			"\t\t- POSTGRES_USER=postgres",
			"\t\t- POSTGRES_PASSWORD=postgres",
			"\tports:",
			"\t\t- \"5432:5432\"\n",
		],
		"description": "docker-compose.yml, Postgres, db",
	},

	"docker-compose-postgres-pdadmin": {
		"prefix": "dockercomposePgAdmin",
		"body": [
			"pgadmin:",
			"\tcontainer_name: pgadmin4_container",
			"\timage: dpage/pgadmin4",
			"\trestart: unless-stopped",
			"\tenvironment:",
			"\t\t- PGADMIN_DEFAULT_EMAIL=admin@domain.com",
			"\t\t- PGADMIN_DEFAULT_PASSWORD=root",
			"\tports:",
			"\t\t- \"5050:80\"\n",
		],
		"description": "docker-compose.yml, Postgres, PgAdmin",
	},
}